{
  "name": "react-splitz",
  "version": "1.0.0",
  "description": "A/B & Multivariate Testing library for React projects",
  "keywords": [
    "react",
    "reactjs",
    "ab",
    "testing",
    "experiments",
    "multivariate"
  ],
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build-modules": "npm install",
    "test": "jest",
    "coverage": "rimraf ./coverage && jest --coverage && open coverage/lcov-report/index.html",
    "coverage-only": "rimraf ./coverage && jest --coverage",
    "build-dev": "NODE_ENV=development webpack",
    "build-prod": "NODE_ENV=production webpack",
    "build": "npm run build-prod && npm run build-dev",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*.js'",
    "lint": "echo Linting code... && eslint ."
  },
  "author": "Ike Peters",
  "license": "MIT",
  "homepage": "https://github.com/ipetez/react-splitz",
  "bugs": "https://github.com/ipetez/react-splitz/issues",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.7.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "pre-push": "^0.1.1",
    "prettier": "1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  },
  "peerDependencies": {
    "react": ">= 16.3.0 < 17",
    "react-dom": ">= 16.3.0 < 17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "pre-push": [
    "build-modules",
    "lint",
    "coverage-only"
  ],
  "dependencies": {}
}
